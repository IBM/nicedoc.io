{
  "name": "nicedoc.io",
  "description": "Pretty README as service",
  "homepage": "https://nicedoc.io",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Kikobeats/nicedoc.io.git"
  },
  "bugs": {
    "url": "https://github.com/Kikobeats/nicedoc.io/issues"
  },
  "keywords": [],
  "dependencies": {
    "@rebass/grid": "~6.0.0-7",
    "anchor-js": "~4.2.0",
    "cheerio": "~1.0.0-rc.2",
    "codecopy": "~1.0.2",
    "emojilib": "~2.4.0",
    "express": "~4.16.4",
    "html-urls": "~2.3.1",
    "is-relative-url": "~2.0.0",
    "isomorphic-unfetch": "~3.0.0",
    "lodash": "~4.17.11",
    "mdast-util-toc": "~3.0.1",
    "mem": "~4.0.0",
    "next": "~7.0.2",
    "next-routes": "~1.4.2",
    "nprogress": "~0.2.0",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "remark": "~10.0.1",
    "remark-html": "~9.0.0",
    "remark-preset-lint-recommended": "~3.0.2",
    "remark-slug": "~5.1.1",
    "remark-stringify": "~6.0.4",
    "scrollprogress": "~3.0.2",
    "styled-components": "~4.1.3",
    "superstylin": "~1.0.3",
    "zoom-vanilla.js": "~2.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "autoprefixer": "latest",
    "babel-eslint": "latest",
    "babel-plugin-inline-dotenv": "latest",
    "babel-plugin-module-resolver": "latest",
    "babel-plugin-styled-components": "latest",
    "babel-plugin-wrap-in-js": "latest",
    "conventional-github-releaser": "latest",
    "cssnano": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "glob": "latest",
    "husky": "latest",
    "jest": "~23.6.0",
    "lint-staged": "latest",
    "node-sass": "latest",
    "npm-check-updates": "latest",
    "postcss-easy-import": "latest",
    "postcss-focus": "latest",
    "postcss-loader": "latest",
    "prettier": "~1.15.3",
    "raw-loader": "latest",
    "sass-loader": "latest",
    "standard": "latest",
    "standard-version": "latest"
  },
  "scripts": {
    "build": "NODE_ENV=production next build",
    "clean": "rm -rf node_modules && rm -rf .next",
    "deploy": "npm run docker:build && npm run docker:push && npm run helm:deploy",
    "dev": "NODE_ENV=development node server.js",
    "docker:build": "docker build --tag registry.ng.bluemix.net/nicedoc/nicedoc .",
    "docker:push": "docker push registry.ng.bluemix.net/nicedoc/nicedoc:latest",
    "helm:deploy": "helm upgrade production scripts/helm --install",
    "lint": "standard-markdown && standard",
    "postrelease": "npm run release:tags && npm run release:github",
    "precommit": "lint-staged",
    "prerelease": "npm run update:check && git-authors-cli",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin}/**/*.js --single-quote",
    "release": "git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "start": "NODE_ENV=production node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "update": "ncu -a",
    "update:check": "ncu -- --error-level 2"
  },
  "private": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "finepack",
        "git add"
      ]
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "standard-version": {
    "scripts": {
      "prechangelog": "git-authors-cli"
    }
  }
}
